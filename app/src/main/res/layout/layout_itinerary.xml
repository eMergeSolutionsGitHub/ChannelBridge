<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/appWhite">
        <include
            android:id="@+id/relLayout_channelbridge_bar"
            layout="@layout/commen_title_bar"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relLayout_channelbridge_bar"
                android:background="@color/appFont">

                <RelativeLayout
                    android:id="@+id/relLayout_itinerary_customer"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/appWhite"
                    android:layout_width="400dip"
                    android:layout_margin="5dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycview_itinerary_customer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:dividerHeight="20dip" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout11"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@+id/relLayout_itinerary_customer"
                    android:layout_height="200dip"
                    android:background="@color/appWhite"
                    android:layout_alignTop="@+id/relLayout_itinerary_customer"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp">

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/relativeLayout11"
                    android:layout_alignStart="@+id/relativeLayout11"
                    android:layout_below="@+id/relativeLayout11"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/appWhite">

                </RelativeLayout>

            </RelativeLayout>

    </RelativeLayout>


    <include
        android:id="@+id/drawer"
        layout="@layout/commen_navigation_drawer" />
</android.support.v4.widget.DrawerLayout>
