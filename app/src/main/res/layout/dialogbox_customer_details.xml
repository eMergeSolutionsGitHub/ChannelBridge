<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">


                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="4dp"
                    app:civ_shadow="true"
                    android:id="@+id/imgView_dialogbox_customer"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    />

                <emerge.lk.channelbridge.Font.FontTitle
                    android:id="@+id/dialogbox_customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@id/imgView_dialogbox_customer"
                    android:text="Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <emerge.lk.channelbridge.Font.FontTitle
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialogbox_card01_title"
                            android:text="Contact details"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_alignParentTop="true"
                            android:layout_alignLeft="@+id/textView9"
                            android:layout_alignStart="@+id/textView9" />


                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                            android:text="@string/icon_home_menu"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal"
                            android:id="@+id/textView9"
                            app:text="@string/icon_dialog_address"
                            android:textSize="25sp"
                            android:layout_below="@+id/dialogbox_card01_title"
                            android:layout_alignLeft="@+id/textView10"
                            android:layout_alignStart="@+id/textView10" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialog_tvAddress"
                            android:layout_toRightOf="@id/textView9"
                            android:layout_alignTop="@id/textView9"
                            android:text="Address:"/>


                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                            android:text="@string/icon_dialog_phone"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textSize="25sp"
                            android:gravity="center_horizontal"
                            android:layout_below="@id/textView9"
                            android:id="@+id/textView10"
                            app:text="@string/icon_dialog_phone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialog_tvPhone"
                            android:layout_toRightOf="@id/textView10"
                            android:layout_alignTop="@id/textView10"
                            android:text="Contact Number:"/>

                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                            android:text="@string/icon_dialog_email"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textSize="25sp"
                            android:gravity="center_horizontal"
                            android:layout_below="@id/textView10"
                            android:id="@+id/textView11"
                            app:text="@string/icon_dialog_email" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialog_tvEmail"
                            android:layout_toRightOf="@id/textView11"
                            android:layout_alignTop="@id/textView11"
                            android:text="Email"/>

                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                            android:text="@string/icon_dialog_web"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textSize="25sp"
                            android:gravity="center_horizontal"
                            android:layout_below="@id/textView11"
                            android:id="@+id/textView12"
                            app:text="@string/icon_dialog_web" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialog_tvWeb"
                            android:layout_toRightOf="@id/textView12"
                            android:layout_alignTop="@id/textView12"
                            android:text="Web:"/>

                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                            android:text="@string/icon_dialog_town"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textSize="25sp"
                            android:gravity="center_horizontal"
                            android:layout_below="@id/textView12"
                            android:id="@+id/textView13"
                            app:text="@string/icon_dialog_fax" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialog_tvFax"
                            android:layout_toRightOf="@id/textView13"
                            android:layout_alignTop="@id/textView13"
                            android:text="Fax:"/>




                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <emerge.lk.channelbridge.Font.FontTitle
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialogbox_card02_title"
                            android:text="Location details"
                            android:textAppearance="?android:attr/textAppearanceLarge"/>


                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                            android:text="@string/icon_dialog_area"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal"
                            android:id="@+id/textView14"
                            app:text="@string/icon_dialog_area"
                            android:textSize="25sp"
                            android:layout_below="@+id/dialogbox_card02_title"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialog_tvArea"
                            android:layout_toRightOf="@id/textView14"
                            android:layout_alignTop="@id/textView14"
                            android:text="Area:"/>


                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                            android:text="@string/icon_dialog_town"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textSize="25sp"
                            android:gravity="center_horizontal"
                            android:layout_below="@id/textView14"
                            android:id="@+id/textView15"
                            app:text="@string/icon_dialog_town" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialog_tvTown"
                            android:layout_toRightOf="@id/textView15"
                            android:layout_alignTop="@id/textView15"
                            android:text="Town:"/>

                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                            android:text="@string/icon_dialog_district"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textSize="25sp"
                            android:gravity="center_horizontal"
                            android:layout_below="@id/textView15"
                            android:id="@+id/textView16"
                            app:text="@string/icon_dialog_district" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialog_tvDistrict"
                            android:layout_toRightOf="@id/textView16"
                            android:layout_alignTop="@id/textView16"
                            android:text="District:"/>





                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                            android:text="@string/icon_dialog_latitude"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textSize="25sp"
                            android:gravity="center_horizontal"
                            android:layout_below="@id/textView16"
                            android:id="@+id/textView17"
                            app:text="@string/icon_dialog_latitude" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialog_tvLat"
                            android:layout_toRightOf="@id/textView17"
                            android:layout_alignTop="@id/textView17"
                            android:text="Latitude:"/>




                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                            android:text="@string/icon_dialog_longitude"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textSize="25sp"
                            android:gravity="center_horizontal"
                            android:layout_below="@id/textView17"
                            android:id="@+id/textView18"
                            app:text="@string/icon_dialog_longitude" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialog_tvLongitude"
                            android:layout_toRightOf="@id/textView18"
                            android:layout_alignTop="@id/textView18"
                            android:text="Longitude:"/>




                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <emerge.lk.channelbridge.Font.FontTitle
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialogbox_card03_title"
                            android:text="Owner's details"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />



                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                            android:text="@string/icon_dialog_own_name"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal"
                            android:id="@+id/textView19"
                            app:text="@string/icon_dialog_own_name"
                            android:textSize="25sp"
                            android:layout_below="@+id/dialogbox_card03_title"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialog_Own_name"
                            android:layout_toRightOf="@id/textView19"
                            android:layout_alignTop="@id/textView19"
                            android:text="Owner's Name:"/>


                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                            android:text="@string/icon_dialog_own_phone"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center_horizontal"
                            android:layout_below="@id/textView19"
                            android:id="@+id/textView20"
                            app:text="@string/icon_dialog_own_phone"
                            android:textSize="25sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialog_Own_No"
                            android:layout_toRightOf="@id/textView20"
                            android:layout_alignTop="@id/textView20"
                            android:text="Contact No:"/>



                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <emerge.lk.channelbridge.Font.FontTitle
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialogbox_card04_title"
                            android:text="Other details"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />


                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                            android:text="@string/icon_dialog_own_ba_no"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal"
                            android:id="@+id/textView21"
                            app:text="@string/icon_dialog_own_ba_no"
                            android:textSize="25sp"
                            android:layout_below="@+id/dialogbox_card04_title"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialog_brNo"
                            android:layout_toRightOf="@id/textView21"
                            android:layout_alignTop="@id/textView21"
                            android:text="BR no:"/>


                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                            android:text="@string/icon_dialog_own_reg_no"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center_horizontal"
                            android:id="@+id/textView22"
                            app:text="@string/icon_dialog_own_name"
                            android:textSize="25sp"
                            android:layout_below="@+id/textView21"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialog_regNo"
                            android:text="Reg. no:"
                            android:layout_below="@+id/textView21"
                            android:layout_toRightOf="@+id/textView21"
                            android:layout_toEndOf="@+id/textView21" />




                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgView_dialogbox_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:clickable="true"
        android:src="@android:drawable/btn_dialog" />

</LinearLayout>