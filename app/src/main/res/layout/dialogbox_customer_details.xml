<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <!---->

        <ImageView
            android:id="@+id/imgView_dialogbox_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="left|top"
            android:clickable="true"
            android:src="@drawable/logo" />

    </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/appHome"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">


                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            card_view:cardCornerRadius="2dp"
                            card_view:contentPadding="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal">


                                <com.mikhaellopez.circularimageview.CircularImageView
                                    android:id="@+id/imgView_dialogbox_customer"
                                    android:layout_width="200dp"
                                    android:layout_height="200dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    app:civ_border_color="@color/colorPrimary"
                                    app:civ_border_width="4dp"
                                    app:civ_shadow="true" />

                                <emerge.lk.channelbridge.Font.FontTitle
                                    android:id="@+id/dialogbox_customer_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/imgView_dialogbox_customer"
                                    android:gravity="center"
                                    android:text="Name"
                                    android:textAppearance="?android:attr/textAppearanceLarge" />


                                <emerge.lk.channelbridge.Font.FontTitle
                                    android:id="@+id/dialogbox_customer_area"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/dialogbox_customer_name"
                                    android:gravity="center"
                                    android:text="Area"
                                    android:textAppearance="?android:attr/textAppearanceLarge" />

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="2dp"
                                    card_view:cardCornerRadius="2dp"
                                    card_view:contentPadding="10dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <emerge.lk.channelbridge.Font.FontTitle
                                            android:id="@+id/dialogbox_card01_title"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignLeft="@+id/textView9"
                                            android:layout_alignParentTop="true"
                                            android:layout_alignStart="@+id/textView9"
                                            android:text="Contact details"
                                            android:textAppearance="?android:attr/textAppearanceLarge" />


                                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                                            android:id="@+id/textView9"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_alignLeft="@+id/textView10"
                                            android:layout_alignStart="@+id/textView10"
                                            android:layout_below="@+id/dialogbox_card01_title"
                                            android:layout_marginTop="10dp"
                                            android:gravity="center_horizontal"
                                            android:text="@string/icon_home_menu"
                                            android:textSize="25sp"
                                            app:text="@string/icon_dialog_address" />

                                        <TextView
                                            android:id="@+id/dialog_tvAddress"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignTop="@id/textView9"
                                            android:layout_toRightOf="@id/textView9"
                                            android:text="Address:"
                                            android:textSize="18sp" />


                                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                                            android:id="@+id/textView10"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_below="@id/textView9"
                                            android:gravity="center_horizontal"
                                            android:text="@string/icon_dialog_phone"
                                            android:textSize="25sp"
                                            app:text="@string/icon_dialog_phone" />

                                        <TextView
                                            android:id="@+id/dialog_tvPhone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignTop="@id/textView10"
                                            android:layout_toRightOf="@id/textView10"
                                            android:text="Contact Number:"
                                            android:textSize="18sp" />

                                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                                            android:id="@+id/textView11"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_below="@id/textView10"
                                            android:gravity="center_horizontal"
                                            android:text="@string/icon_dialog_email"
                                            android:textSize="25sp"
                                            app:text="@string/icon_dialog_email" />

                                        <TextView
                                            android:id="@+id/dialog_tvEmail"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignTop="@id/textView11"
                                            android:layout_toRightOf="@id/textView11"
                                            android:text="Email"
                                            android:textSize="18sp" />

                                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                                            android:id="@+id/textView12"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_below="@id/textView11"
                                            android:gravity="center_horizontal"
                                            android:text="@string/icon_dialog_web"
                                            android:textSize="25sp"
                                            app:text="@string/icon_dialog_web" />

                                        <TextView
                                            android:id="@+id/dialog_tvWeb"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignTop="@id/textView12"
                                            android:layout_toRightOf="@id/textView12"
                                            android:text="Web:"
                                            android:textSize="18sp" />

                                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                                            android:id="@+id/textView13"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_below="@id/textView12"
                                            android:gravity="center_horizontal"
                                            android:text="@string/icon_dialog_town"
                                            android:textSize="25sp"
                                            app:text="@string/icon_dialog_fax" />

                                        <TextView
                                            android:id="@+id/dialog_tvFax"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignTop="@id/textView13"
                                            android:layout_toRightOf="@id/textView13"
                                            android:text="Fax:"
                                            android:textSize="18sp" />


                                    </RelativeLayout>
                                </android.support.v7.widget.CardView>


                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="2dp"
                                    card_view:cardCornerRadius="2dp"
                                    card_view:contentPadding="10dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <emerge.lk.channelbridge.Font.FontTitle
                                            android:id="@+id/dialogbox_card02_title"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Location details"
                                            android:textAppearance="?android:attr/textAppearanceLarge" />


                                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                                            android:id="@+id/textView14"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_below="@+id/dialogbox_card02_title"
                                            android:layout_marginTop="10dp"
                                            android:gravity="center_horizontal"
                                            android:text="@string/icon_dialog_area"
                                            android:textSize="25sp"
                                            app:text="@string/icon_dialog_area" />

                                        <TextView
                                            android:id="@+id/dialog_tvArea"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignTop="@id/textView14"
                                            android:layout_toRightOf="@id/textView14"
                                            android:text="Area:"
                                            android:textSize="18sp" />


                                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                                            android:id="@+id/textView15"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_below="@id/textView14"
                                            android:gravity="center_horizontal"
                                            android:text="@string/icon_dialog_town"
                                            android:textSize="25sp"
                                            app:text="@string/icon_dialog_town" />

                                        <TextView
                                            android:id="@+id/dialog_tvTown"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignTop="@id/textView15"
                                            android:layout_toRightOf="@id/textView15"
                                            android:text="Town:"
                                            android:textSize="18sp" />

                                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                                            android:id="@+id/textView16"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_below="@id/textView15"
                                            android:gravity="center_horizontal"
                                            android:text="@string/icon_dialog_district"
                                            android:textSize="25sp"
                                            app:text="@string/icon_dialog_district" />

                                        <TextView
                                            android:id="@+id/dialog_tvDistrict"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignTop="@id/textView16"
                                            android:layout_toRightOf="@id/textView16"
                                            android:text="District:"
                                            android:textSize="18sp" />


                                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                                            android:id="@+id/textView17"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_below="@id/textView16"
                                            android:gravity="center_horizontal"
                                            android:text="@string/icon_dialog_latitude"
                                            android:textSize="25sp"
                                            app:text="@string/icon_dialog_latitude" />

                                        <TextView
                                            android:id="@+id/dialog_tvLat"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignTop="@id/textView17"
                                            android:layout_toRightOf="@id/textView17"
                                            android:text="Latitude:"
                                            android:textSize="18sp" />


                                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                                            android:id="@+id/textView18"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_below="@id/textView17"
                                            android:gravity="center_horizontal"
                                            android:text="@string/icon_dialog_longitude"
                                            android:textSize="25sp"
                                            app:text="@string/icon_dialog_longitude" />

                                        <TextView
                                            android:id="@+id/dialog_tvLongitude"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/textView17"
                                            android:layout_toEndOf="@+id/textView17"
                                            android:layout_toRightOf="@+id/textView17"
                                            android:text="Longitude:"
                                            android:textSize="18sp" />


                                    </RelativeLayout>
                                </android.support.v7.widget.CardView>


                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="2dp"
                                    card_view:cardCornerRadius="2dp"
                                    card_view:contentPadding="10dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <emerge.lk.channelbridge.Font.FontTitle
                                            android:id="@+id/dialogbox_card03_title"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentTop="true"
                                            android:text="Owner's details"
                                            android:textAppearance="?android:attr/textAppearanceLarge" />


                                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                                            android:id="@+id/textView19"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_below="@+id/dialogbox_card03_title"
                                            android:layout_marginTop="10dp"
                                            android:gravity="center_horizontal"
                                            android:text="@string/icon_dialog_own_name"
                                            android:textSize="25sp"
                                            app:text="@string/icon_dialog_own_name" />

                                        <TextView
                                            android:id="@+id/dialog_Own_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignTop="@id/textView19"
                                            android:layout_toRightOf="@id/textView19"
                                            android:text="Owner's Name:"
                                            android:textSize="18sp" />


                                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                                            android:id="@+id/textView20"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_below="@id/textView19"
                                            android:gravity="center_horizontal"
                                            android:text="@string/icon_dialog_own_phone"
                                            android:textSize="25sp"
                                            app:text="@string/icon_dialog_own_phone" />

                                        <TextView
                                            android:id="@+id/dialog_Own_No"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignTop="@id/textView20"
                                            android:layout_toRightOf="@id/textView20"
                                            android:text="Contact No:"
                                            android:textSize="18sp" />


                                    </RelativeLayout>
                                </android.support.v7.widget.CardView>


                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="2dp"
                                    card_view:cardCornerRadius="2dp"
                                    card_view:contentPadding="10dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <emerge.lk.channelbridge.Font.FontTitle
                                            android:id="@+id/dialogbox_card04_title"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentTop="true"
                                            android:text="Other details"
                                            android:textAppearance="?android:attr/textAppearanceLarge" />


                                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                                            android:id="@+id/textView21"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_below="@+id/dialogbox_card04_title"
                                            android:layout_marginTop="10dp"
                                            android:gravity="center_horizontal"
                                            android:text="@string/icon_dialog_own_ba_no"
                                            android:textSize="25sp"
                                            app:text="@string/icon_dialog_own_ba_no" />

                                        <TextView
                                            android:id="@+id/dialog_brNo"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignTop="@id/textView21"
                                            android:layout_toRightOf="@id/textView21"
                                            android:text="BR no:"
                                            android:textSize="18sp" />


                                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                                            android:id="@+id/textView22"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_below="@+id/textView21"
                                            android:gravity="center_horizontal"
                                            android:text="@string/icon_dialog_own_reg_no"
                                            android:textSize="25sp"
                                            app:text="@string/icon_dialog_own_name" />

                                        <TextView
                                            android:id="@+id/dialog_regNo"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/textView21"
                                            android:layout_toEndOf="@+id/textView21"
                                            android:layout_toRightOf="@+id/textView21"
                                            android:text="Reg. no:"
                                            android:textSize="18sp" />


                                    </RelativeLayout>

                                </android.support.v7.widget.CardView>

                            </LinearLayout>

                        </ScrollView>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

</FrameLayout>