<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">


                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="4dp"
                    app:civ_shadow="true"
                    android:id="@+id/imgView_dialogbox_customer"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    />

                <emerge.lk.channelbridge.Font.FontTitle
                    android:id="@+id/dialogbox_customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@id/imgView_dialogbox_customer"
                    android:text="Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <emerge.lk.channelbridge.Font.FontTitle
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialogbox_card01_title"
                            android:text="Contact details"
                            android:textAppearance="?android:attr/textAppearanceLarge"/>


                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                            android:text="@string/icon_dialog_town"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_below="@id/dialogbox_card01_title"
                            android:layout_marginLeft="13dp"
                            android:layout_marginStart="13dp"
                            android:id="@+id/textView9"
                            app:text="@string/icon_dialog_own_ba_no" />


                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <emerge.lk.channelbridge.Font.FontTitle
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialogbox_card02_title"
                            android:text="Location details"
                            android:textAppearance="?android:attr/textAppearanceLarge"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <emerge.lk.channelbridge.Font.FontTitle
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialogbox_card03_title"
                            android:text="Owner's details"
                            android:textAppearance="?android:attr/textAppearanceLarge"/>


                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <emerge.lk.channelbridge.Font.FontTitle
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dialogbox_card04_title"
                            android:text="Other details"
                            android:textAppearance="?android:attr/textAppearanceLarge"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgView_dialogbox_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:clickable="true"
        android:src="@android:drawable/btn_dialog" />

</LinearLayout>