<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/appWhite">

        <RelativeLayout
            android:id="@+id/relLayout_home_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/titlebar">

            <RelativeLayout
                android:id="@+id/relLayout_home_menu"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <emerge.lk.channelbridge.Font.TextViewFontAwesome
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/icon_home_menu"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorNavigationBar" />
            </RelativeLayout>

            <emerge.lk.channelbridge.Font.FontTitle
                android:text="@string/string_home_textview_title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/relLayout_home_menu"
                android:layout_toEndOf="@+id/relLayout_home_menu"
                android:textColor="@color/colorNavigationBar" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relLayout_home_bar"
            android:background="@color/appHome">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/linearOne"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/lineHomeLeft"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/shadow_borders"
                        android:orientation="horizontal">

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/bar_chart1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lineHomeRight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/shadow_borders"
                        android:orientation="horizontal">

                        <com.github.mikephil.charting.charts.BubbleChart
                            android:id="@+id/bar_chart2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lineHomeBottom"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/linearOne"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shadow_borders"
                    android:orientation="horizontal">

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/bar_chart_h"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/drawer"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorNavigationBar">

        <RelativeLayout
            android:id="@+id/relLayout_userimage"
            android:layout_width="match_parent"
            android:layout_height="150dip">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imageView_comm_profile"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/user"
                app:civ_border_color="@color/appWhite"
                app:civ_border_width="4dp"
                app:civ_shadow="true" />

            <emerge.lk.channelbridge.Font.FontTitle
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView_comm_profile"
                android:layout_centerHorizontal="true"
                android:text="A.S.G.Kumara"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/appWhite" />
        </RelativeLayout>


        <ListView
            android:id="@+id/listView_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relLayout_userimage"
            android:layout_centerHorizontal="true"
            android:divider="@color/colorNavigationBar"
            android:dividerHeight="15dip" />

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
