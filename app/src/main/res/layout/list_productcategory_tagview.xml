<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/rounded_corner_productcategorytag"
        android:id="@+id/relLayout_listproductcategorytag_main"
        android:layout_height="30dp">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="30dp"
            android:layout_marginLeft="5dp">

            <emerge.lk.channelbridge.Font.TextViewFontAwesome
                android:text="@string/icon_invoiceproducttagview_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/colorNavigationBar" />

        </RelativeLayout>

        <emerge.lk.channelbridge.Font.FontTitle
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtView_taginvoice_productcategory"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/relativeLayout"
            android:layout_toEndOf="@+id/relativeLayout"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorNavigationBar" />
    </RelativeLayout>
</RelativeLayout>