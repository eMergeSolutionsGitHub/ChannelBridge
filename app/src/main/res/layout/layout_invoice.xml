<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/appWhite">

        <include
            android:id="@+id/relLayout_channelbridge_bar"
            layout="@layout/commen_title_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relLayout_channelbridge_bar"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="0dp"
                android:layout_height="70dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="60dp">

                    <RelativeLayout
                        android:id="@+id/relLayout_invoice_shoppingcart"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true">

                        <emerge.lk.channelbridge.Font.TextViewFontAwesome
                            android:id="@+id/textView28"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="@string/icon_invoice_shoppingcart"
                            android:textColor="@color/colorNavigationBar"
                            android:textSize="36sp" />

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="15dp"
                            android:layout_marginRight="15dp">

                            <emerge.lk.channelbridge.Font.TextViewFontAwesome
                                android:id="@+id/textView_invoices_shoppingcart_indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="@string/icon_invoice_circle"
                                android:textColor="@color/colorAccent"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/textView31"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="01"
                                android:textColor="@color/appWhite" />


                        </RelativeLayout>

                    </RelativeLayout>

                    <emerge.lk.channelbridge.Font.FontTitle
                        android:id="@+id/txtView_invoice_customername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asiri Surgical"
                        android:textAppearance="@android:style/TextAppearance.Large"
                        android:textColor="@color/colorNavigationBar"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/expandablelayout_invoice_shoppingcart_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:el_duration="500"
                app:el_expanded="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dip"
                    android:background="@drawable/shadow_borders">

                </RelativeLayout>
            </net.cachapa.expandablelayout.ExpandableLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                android:background="@color/colorNavigationBar"
                card_view:contentPadding="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorNavigationBar">

                <emerge.lk.channelbridge.Font.FontTitle
                    android:layout_height="wrap_content"
                    android:text="@string/string_invoice_product_code"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textViewCode"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/relLayout_itinerary_customerimage"
                    android:layout_toEndOf="@+id/relLayout_itinerary_customerimage"
                    android:textColor="@color/appWhite"
                    android:layout_width="150dp"
                    android:layout_marginLeft="65dp" />

                <emerge.lk.channelbridge.Font.FontTitle
                    android:layout_height="wrap_content"
                    android:text="@string/string_invoice_product_name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textViewdescription"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textViewCode"
                    android:layout_toEndOf="@+id/textViewCode"
                    android:textColor="@color/appWhite"
                    android:layout_width="180dp" />

                <emerge.lk.channelbridge.Font.FontTitle
                    android:layout_height="wrap_content"
                    android:text="@string/string_invoice_product_batch"
                    android:id="@+id/textViewBatch"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_centerVertical="true"
                    android:textColor="@color/appWhite"
                    android:layout_toRightOf="@+id/textViewdescription"
                    android:layout_toEndOf="@+id/textViewdescription"
                    android:layout_marginLeft="5dp"
                    android:layout_width="150dp" />

                <emerge.lk.channelbridge.Font.FontTitle
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/string_invoice_product_stock"
                    android:id="@+id/txtStock"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textViewBatch"
                    android:layout_toEndOf="@+id/textViewBatch"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/appWhite" />

                <emerge.lk.channelbridge.Font.FontTitle
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/string_invoice_product__expdate"
                    android:id="@+id/txtexpdate"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txtStock"
                    android:layout_toEndOf="@+id/txtStock"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/appWhite" />


                <emerge.lk.channelbridge.Font.FontTitle
                    android:layout_height="wrap_content"
                    android:text="@string/string_invoice_product_sellingprice"
                    android:id="@+id/textViewsellingPrice"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txtexpdate"
                    android:layout_toEndOf="@+id/txtexpdate"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/appWhite"
                    android:layout_width="100dp" />


                <emerge.lk.channelbridge.Font.FontTitle
                    android:layout_height="wrap_content"
                    android:text="@string/string_invoice_product_retailprice"
                    android:id="@+id/textViewPrice"
                    android:layout_centerVertical="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_toRightOf="@+id/textViewsellingPrice"
                    android:layout_toEndOf="@+id/textViewsellingPrice"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/appWhite"
                    android:layout_width="wrap_content" />

            </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycview_invoice_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </RelativeLayout>


    <include
        android:id="@+id/drawer"
        layout="@layout/commen_navigation_drawer" />
</android.support.v4.widget.DrawerLayout>
