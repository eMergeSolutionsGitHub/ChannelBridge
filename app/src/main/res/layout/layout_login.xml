<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="handlers"
            type="emerge.lk.channelbridge.Layout.UserLogin.OnClickLoginHandler"/>
    </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appWhite">

    <ImageView
        android:layout_height="250dip"
        android:id="@+id/imgView"
        android:src="@drawable/logo2"
        android:layout_width="250dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/relLayout_login_initial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imgView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:id="@+id/relLayout_login_password"
            android:layout_below="@+id/relLayout_login_username"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <EditText
                android:layout_width="250dip"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/edtTxt_login_password"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColorHint="@color/appBlack"
                android:hint="@string/string_login_edittext_passwordhint"
                android:textSize="25sp"
                android:textColor="@color/appBlack" />

            <RelativeLayout
                android:layout_width="70dip"
                android:layout_height="50dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/edtTxt_login_password"
                android:layout_toStartOf="@+id/edtTxt_login_password">

                <emerge.lk.channelbridge.Font.TextViewFontAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_login_textview_password"
                    android:id="@+id/txtView__login_password"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorNavigationBar"
                    android:textSize="50sp" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:id="@+id/relLayout_login_username"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dip">

            <EditText
                android:layout_width="250dip"
                android:layout_height="wrap_content"
                android:id="@+id/edtTxt_login_username"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColorHint="@color/appBlack"
                android:hint="@string/string_login_edittext_usernamehint"
                android:textSize="25sp"
                android:textColor="@color/appBlack" />

            <RelativeLayout
                android:layout_width="70dip"
                android:layout_height="50dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/edtTxt_login_username"
                android:layout_toStartOf="@+id/edtTxt_login_username">

                <emerge.lk.channelbridge.Font.TextViewFontAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_login_textview_user"
                    android:id="@+id/ftxtView_login_username"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorNavigationBar"
                    android:textSize="50sp" />
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout_login_button"
            android:layout_below="@+id/relLayout_login_password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                android:text="@string/string_login_button_passwordforgot"
                android:id="@+id/btn_login_passwordforgot"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                style="?android:borderlessButtonStyle"
                android:layout_width="250dip"
                android:layout_height="40dip"
                android:textColor="@color/colorNavigationBar"
                android:textSize="18sp"
                android:layout_marginBottom="10dip"/>

            <Button
                android:text="@string/string_login_button_login"
                android:layout_height="50dip"
                android:id="@+id/btn_login_login"
                android:onClick="@{handlers.onUpdateLoginOnClick}"
                android:background="@color/colorNavigationBar"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="250dip"
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/btn_login_passwordforgot"
                android:layout_alignStart="@+id/btn_login_passwordforgot"
                android:layout_marginTop="20dip"
                android:textColor="@color/appWhite" />
        </RelativeLayout>


    </RelativeLayout>

    <emerge.lk.channelbridge.Font.FontTitle
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relLayout_login_initial"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3"
        android:textSize="35sp"
        android:textColor="@color/colorNavigationBar"
        android:textStyle="bold" />

</RelativeLayout>
</layout>