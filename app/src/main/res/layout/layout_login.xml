<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNavigationBar">

    <RelativeLayout
        android:id="@+id/relativelayout_initial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:id="@+id/relativeLayout2"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <EditText
                android:layout_width="250dip"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/editText_login_password"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColorHint="@color/appWhite"
                android:hint="Password" />

            <RelativeLayout
                android:layout_width="70dip"
                android:layout_height="50dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/editText_login_password"
                android:layout_toStartOf="@+id/editText_login_password">

                <emerge.lk.channelbridge.Font.TextViewFontAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_password"
                    android:id="@+id/textView__login_password"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/appWhite"
                    android:textSize="50sp" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:id="@+id/relativelayout_login_deviceid"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <EditText
                android:layout_width="250dip"
                android:layout_height="wrap_content"
                android:id="@+id/editText_login_deviceid"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:hint="Device ID"
                android:textColorHint="@color/appWhite"
                />


            <RelativeLayout
                android:layout_width="70dip"
                android:layout_height="50dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/editText_login_deviceid"
                android:layout_toStartOf="@+id/editText_login_deviceid">

                <emerge.lk.channelbridge.Font.TextViewFontAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_deviceid"
                    android:id="@+id/textView_login_DeviesID"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/appWhite"
                    android:textSize="50sp" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:id="@+id/relativeLayout"
            android:layout_below="@+id/relativelayout_login_deviceid"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <EditText
                android:layout_width="250dip"
                android:layout_height="wrap_content"
                android:id="@+id/editText_login_username"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColorHint="@color/appWhite"
                android:hint="User Name" />

            <RelativeLayout
                android:layout_width="70dip"
                android:layout_height="50dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/editText_login_username"
                android:layout_toStartOf="@+id/editText_login_username">

                <emerge.lk.channelbridge.Font.TextViewFontAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_user"
                    android:id="@+id/textView_login_username"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/appWhite"
                    android:textSize="50sp" />
            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:layout_height="250dp"
        android:id="@+id/imageView"
        android:src="@drawable/logowhite"
        android:layout_width="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>