<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dip"
    xmlns:app="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:elevation="3dp"
        card_view:cardCornerRadius="0dip">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relLayout_itinerary_customer"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:background="@color/appWhite"
            android:layout_height="120dp">


            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/relLayout_itinerary_customerimage"
                android:layout_alignParentStart="true"
                android:layout_width="100dip">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="4dp"
                    app:civ_shadow="true"
                    android:id="@+id/imgView_itinerary_customer"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

            <emerge.lk.channelbridge.Font.FontTitle
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView_itinerary_customercity"
                android:textColor="@color/colorNavigationBar"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/relLayout_itinerary_customerimage"
                android:layout_toEndOf="@+id/relLayout_itinerary_customerimage" />

            <emerge.lk.channelbridge.Font.FontTitle
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_itinerary_customername"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorNavigationBar"
                android:layout_above="@+id/textView_itinerary_customercity"
                android:layout_toRightOf="@+id/relLayout_itinerary_customerimage"
                android:layout_toEndOf="@+id/relLayout_itinerary_customerimage" />

        </RelativeLayout>




    </android.support.v7.widget.CardView>
</LinearLayout>