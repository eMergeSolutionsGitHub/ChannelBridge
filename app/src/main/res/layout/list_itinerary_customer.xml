<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relLayout_itinerary_customer"
        android:layout_height="100.0dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:background="@color/appWhite">


        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/relLayout_itinerary_customerimage"
            android:layout_alignParentStart="true"
            android:layout_width="100dip">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                android:id="@+id/imgView_itinerary_customer"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <emerge.lk.channelbridge.Font.FontTitle
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_itinerary_customername"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorNavigationBar"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/relLayout_itinerary_customerimage"
            android:layout_toEndOf="@+id/relLayout_itinerary_customerimage" />

        <emerge.lk.channelbridge.Font.FontTitle
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignLeft="@+id/textView_itinerary_customername"
            android:layout_alignStart="@+id/textView_itinerary_customername"
            android:layout_below="@+id/textView_itinerary_customername"
            android:id="@+id/textView_itinerary_customercity"
            android:textColor="@color/appFont" />


    </RelativeLayout>

</RelativeLayout>
