<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="emerge.lk.channelbridge">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.camera"
        android:required="false"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Layout.Splash"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Layout.UserLogin"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".Layout.Dashboard"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".Layout.Itinerary"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".Layout.Invoice"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".Layout.Customer"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".Layout.CustomerPhotoGallery"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

    </application>

</manifest>