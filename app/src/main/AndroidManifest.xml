<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="emerge.lk.channelbridge">

    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Layout.Splash"  android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

     <activity android:name=".Layout.UserLogin"
         android:screenOrientation="landscape"
         android:windowSoftInputMode="stateHidden"/>

        <activity android:name=".Layout.Dashboard"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden"/>

        <activity android:name=".Layout.Itinerary"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden"/>

    </application>

</manifest>